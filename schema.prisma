model zap_repay {
  id            BigInt      @id(map: "zap_repay_pkey") @default(autoincrement())
  market        usg_markets @relation(fields: [market_id], references: [id])
  market_id     BigInt
  account       String      @db.VarChar
  repayer       String      @db.VarChar
  repaid_amount String      @db.VarChar
